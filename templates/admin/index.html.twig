{% extends 'base.html.twig' %}

{% block title %}Liste utilisateurs
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="m-5">Liste utilisateurs
			<a href="{{ path('app_admin_new') }}">
				<button type="button" class="btn btn-primary">Créer</button>
			</a>
		</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Roles</th>
					<th>Password</th>
					<th>Nom</th>
					<th>Prenom</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for admin in admins %}
					<tr>
						<td>{{ admin.id }}</td>
						<td>{{ admin.email }}</td>
						<td>{{ admin.roles ? admin.roles|json_encode : '' }}</td>
						<td>{{ admin.password }}</td>
						<td>{{ admin.nom }}</td>
						<td>{{ admin.prenom }}</td>
						<td class="d-flex gap-1">
							<a href="{{ path('app_admin_show', {'id': admin.id}) }}">
								<button type="button" class="btn btn-primary">Voir</button>
							</a>
							<a href="{{ path('app_admin_edit', {'id': admin.id}) }}">
								<button type="button" class="btn btn-primary">Modifier</button>
							</a>

							{{ include('admin/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>
					<a href="{{ path('app_admin_new') }}">
						<button type="button" class="btn btn-primary">Créer</button>
					</a>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
